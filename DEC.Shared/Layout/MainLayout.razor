@inherits LayoutComponentBase
<FluentDesignTheme StorageName="theme" />
<CascadingAuthenticationState>
    <FluentLayout>
        <FluentHeader>
            <AuthorizeView>
                <Authorized>
                    DEC - @context.User.Identity?.Name
                </Authorized>
                <NotAuthorized>
                    DEC
                </NotAuthorized>
            </AuthorizeView>
           
        </FluentHeader>
        <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
            <NavMenu />
            <FluentBodyContent Class="body-content">
                <div class="content">
                    @Body
                </div>
            </FluentBodyContent>
        </FluentStack>
    </FluentLayout>
</CascadingAuthenticationState>
<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider ClearAfterNavigation/>
<FluentMenuProvider />
