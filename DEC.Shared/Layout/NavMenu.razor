<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
            <AuthorizeView>
                <Authorized>
                    <FluentNavLink Href="jobslist" Icon="@(new Icons.Regular.Size20.TasksApp())" IconColor="Color.Accent">Jobs</FluentNavLink>
                    <FluentNavLink Href="users" Icon="@(new Icons.Regular.Size20.People())" IconColor="Color.Accent">User List</FluentNavLink>
                    <FluentNavLink Href="nflist" Icon="@(new Icons.Regular.Size20.MoneyOff())" IconColor="Color.Accent">Non Factored</FluentNavLink>
                    <FluentNavLink Href="faq" Icon="@(new Icons.Regular.Size20.QuestionCircle())" IconColor="Color.Accent">FAQ</FluentNavLink>
                    <FluentNavLink Href="vehiclelist" Icon="@(new Icons.Regular.Size20.VehicleTruckProfile())" IconColor="Color.Accent">Vehicle List</FluentNavLink>
                    <FluentNavGroup Expanded="false" Title="Settings" Icon="@(new Icons.Regular.Size20.Settings())" IconColor="Color.Accent">
                        <FluentNavLink Href="settheme" Icon="@(new Icons.Regular.Size20.ContentSettings())" IconColor="Color.Accent">Set App Theme</FluentNavLink>
                        <FluentNavLink Href="httptest" Icon="@(new Icons.Regular.Size20.NetworkCheck())" IconColor="Color.Accent">Test Network</FluentNavLink>
                        <FluentNavLink Href="testupload" Icon="@(new Icons.Regular.Size20.ArrowUpload())" IconColor="Color.Accent">Test Upload</FluentNavLink>
                    </FluentNavGroup>
                    <FluentDivider></FluentDivider>
                    <FluentNavLink Href="logout" Icon="@(new Icons.Regular.Size20.SignOut())" IconColor="Color.Accent">Sign Out</FluentNavLink>
                </Authorized>
            </AuthorizeView>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}
